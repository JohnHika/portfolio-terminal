# Environment Variables Example
# Copy this file to .env and update the values

# Development environment
NODE_ENV=development

# Server port
PORT=5000

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/portfolio-terminal
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/portfolio-terminal
MONGODB_URI=mongodb://localhost:27017/portfolio-terminal

# JWT secret key for authentication (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
